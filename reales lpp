real a,b,ca
caracter c
entero opcion2,base ,h,area, lado , cuadrado, radio 
inicio  
escriba "ingrese un caracter de menu "
llamar nueva_linea 
escriba "s para la suma "
llamar nueva_linea 
escriba "r para la resta "
llamar nueva_linea
escriba "P para desplegar menu de area"
llamar nueva_linea 
escriba "caracter distinto a R o S para terminar "
llamar nueva_linea 
   
    lea c 
    caso c
    
    's','S','+':
			     escriba "vamos a la suma"
			     llamar nueva_linea  
			     escriba " ingrese le primer numero "
			     llamar nueva_linea
			     lea a 
			     llamar nueva_linea
			     escriba "ingrese seugundo numero "
			     llamar nueva_linea
			     lea b 
			     llamar nueva_linea 
			     lea ca<-a+b
			     escriba "escriba la suma es ", ca
     'r':
     			 escriba "vamos a restar "
     
     
     
      
     'p':
			     escriba "digite opcion seleccionar"
			     llamar nueva_linea 
			     escriba "1 para area triengulo"
			     llamar nueva_linea 
			     escriba "50 para el area cuadrado"
			     llamar nueva_linea 
			     escriba " 8 para area circulo"
			     llamar nueva_linea
	             lea  opcion2
	             caso opcion2
		   			1:       
			             escriba "ingrese el numero para la base "
			             lea base 
			             llamar nueva_linea 
			             escriba "ingrese el numero para la altura "
			             lea h 
			             area <-(base*h)/2 
			             escriba area 
			        50:     
			             escriba "digite valor del lado"
					     llamar nueva_linea 
					     lea lado 
					     cuadrado<-lado*lado
					     escriba cuadrado 
					 8:
					 	 escriba "digite valor del radio del circulo "  
					 	 lea radio   
					 	 circulo <-radio*3.1416
					 	 escriba circulo 
					 sino:
					 	escriba "opcion no valida "   
					 fin caso  							     
   sino:
   	escriba "opcion invalida" 
   fin caso 
 fin

